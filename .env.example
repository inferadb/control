# InferaDB Control Plane Environment Variables
# Copy this file to .env and update with your values.
#
# All environment variables use the INFERADB__CONTROL__ prefix.
# CLI arguments override env vars, which override defaults.
# Run `inferadb-control --help` for the full list of options.

# =============================================================================
# Server
# =============================================================================

INFERADB__CONTROL__LISTEN=127.0.0.1:9090
INFERADB__CONTROL__LOG_LEVEL=info
# INFERADB__CONTROL__LOG_FORMAT=auto  # auto, json, or text

# =============================================================================
# Identity & Encryption
# =============================================================================

# Ed25519 PEM key for control identity (auto-generated if absent)
# INFERADB__CONTROL__PEM=

# Path to AES-256-GCM master key file
INFERADB__CONTROL__KEY_FILE=./data/master.key

# =============================================================================
# Storage
# =============================================================================

# Storage backend: "memory" or "ledger"
INFERADB__CONTROL__STORAGE=memory

# Ledger configuration (required when storage=ledger)
# INFERADB__CONTROL__LEDGER_ENDPOINT=http://localhost:50051
# INFERADB__CONTROL__LEDGER_CLIENT_ID=control-001
# INFERADB__CONTROL__LEDGER_NAMESPACE_ID=1
# INFERADB__CONTROL__LEDGER_VAULT_ID=1

# =============================================================================
# Email (SMTP)
# =============================================================================

# SMTP host (empty string = email disabled)
INFERADB__CONTROL__EMAIL_HOST=localhost
INFERADB__CONTROL__EMAIL_PORT=1025
# INFERADB__CONTROL__EMAIL_USERNAME=
# INFERADB__CONTROL__EMAIL_PASSWORD=
INFERADB__CONTROL__EMAIL_FROM_ADDRESS=noreply@inferadb.local
INFERADB__CONTROL__EMAIL_FROM_NAME=InferaDB
# INFERADB__CONTROL__EMAIL_INSECURE=false

# =============================================================================
# Frontend
# =============================================================================

INFERADB__CONTROL__FRONTEND_URL=http://localhost:3000
